-- Initial yaxmpp.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                yaxmpp
version:             0.1.0.0
synopsis:            Yet another XMPP implementation for Haskell
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Nikolay Amiantov
maintainer:          ab@fmap.me
-- copyright:           
category:            Network
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Network.XMPP.Connection
                     , Network.XMPP.Stream
                     , Network.XMPP.Names
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.9
                     , bytestring
                     , text
                     , containers
                     , either
                     , exceptions
                     , transformers
                     , transformers-base
                     , monad-control
                     , monad-logger
                     , primitive
                     , xml-types
                     , blaze-builder
                     , xml-conduit
                     , iproute
                     , dns
                     , streaming-commons
                     , conduit
                     , conduit-extra
                     , network-conduit-tls
                     , tls
                     , data-default
                     , async
                     , stm
                     , stm-chans
                     , stm-conduit
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , RecordWildCards
                     , TemplateHaskell
                     , TupleSections
                     , RankNTypes
                     , MultiWayIf
                     , LambdaCase
                     , FlexibleContexts
                     , ViewPatterns
                     , ScopedTypeVariables
  ghc-options:         -Wall

executable test
  build-depends:       base >=4.8 && <4.9
                     , yaxmpp
                     , either
                     , transformers-base
                     , monad-logger
                     , dns
  hs-source-dirs:      exe
  main-is:             Test.hs
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
  ghc-options:         -Wall