-- Initial yaxmpp.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                yaxmpp
version:             0.1.0.0
synopsis:            Yet another XMPP implementation for Haskell
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Nikolay Amiantov
maintainer:          ab@fmap.me
-- copyright:           
category:            Network
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Network.XMPP.Connection
                     , Network.XMPP.Stream
                     , Network.XMPP.Session
                     , Network.XMPP.Stanza
                     , Network.XMPP.Address
                     , Network.XMPP.XML
                     , Network.SASL
                     , Data.ID
                     , Data.Injective
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8
                     , bytestring
                     , text
                     , containers
                     , either
                     , exceptions
                     , transformers
                     , transformers-base
                     , monad-control
                     , lifted-base
                     , monad-logger
                     , xml-types
                     , blaze-builder
                     , xml-conduit >= 1.3.5
                     , attoparsec
                     , base64-bytestring
                     , iproute
                     , dns
                     , conduit
                     , conduit-extra
                     , connection
                     , tls
                     , data-default
                     , stringprep
                     , interpolatedstring-perl6
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , RecordWildCards
                     , TemplateHaskell
                     , TupleSections
                     , RankNTypes
                     , MultiWayIf
                     , LambdaCase
                     , FlexibleContexts
                     , ViewPatterns
                     , ScopedTypeVariables
                     , PatternSynonyms
                     , ConstraintKinds
                     , MultiParamTypeClasses
                     , QuasiQuotes
  ghc-options:         -Wall

executable test
  build-depends:       base >=4.8
                     , yaxmpp
                     , text
                     , bytestring
                     , either
                     , transformers
                     , monad-logger
                     , connection
                     , dns
                     , exceptions
                     , lifted-base
                     , interpolatedstring-perl6
  hs-source-dirs:      exe
  main-is:             Test.hs
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , TemplateHaskell
                     , QuasiQuotes
                     , LambdaCase
  ghc-options:         -Wall
